@model IEnumerable<Entities.Concrete.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/ManagerPanel/_ManagerLayout.cshtml";
}

<br />

<p>
    <a href="/User/Create" class="btn btn-success">Ekle</a>
</p>

<table class="table table-hover" id="tablo">
    <thead>
        <tr>
            <th>ID</th>
            <th>KULLANICI ADI</th>
            <th>ŞİFRE</th>
            <th>GÜNCELLE</th>
            <th>SİL</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Username</td>
                <td>@item.Password</td>
                <td><a href="/User/Update/@item.Id" class="btn btn-primary">Güncelle</a></td>
                <td><a href="/User/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>

</table>
