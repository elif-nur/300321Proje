@model IEnumerable<Entities.Concrete.Contact>


<style>
    .twitter:hover{background-color:transparent}
    #footer .footer-top .social-links a {
        padding:3px;
    }
</style>
<footer id="footer">

    <div class="footer-top">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-md-6 footer-links">
                    <h4>ADRESS</h4>
                    <i class="bx bx-map" style="color:#e96b56;font-size:18px;"></i>
                    @foreach (var item in ViewBag.deger)
                    {
                        @item.Adress

                        <br />
                    }
                </div>

                <div class="col-lg-3 col-md-6 footer-links">
                    <h4>CONTACT</h4>
                    <ul>
                    
                        @foreach (var item in ViewBag.deger)
                        {
                            <i class="bx bx-phone-call" style="color:#e96b56;font-size:18px"></i>
                            @item.Number
                            <br />

                        }

                    </ul>
                </div>

              

                <div class="col-lg-3 col-md-6 footer-info">
                    <h3>SOCIAL MEDIA</h3>
                   
                    <div class="social-links">
                        @foreach (var item in ViewBag.dgr)
                        {
                            <a href="@item.Twitter" class="twitter" target="_blank"><i class="bi bi-twitter" style="font-size:28px;color:	#81D4FA;"></i></a>
                            <a href="@item.Facebook" class="twitter" target="_blank"><i class="bi bi-facebook" style="font-size:28px;color:azure;"></i></a>
                            <a href="@item.Instagram" class="twitter" target="_blank"><i class="bi bi-instagram" style="font-size:28px;color:pink;"></i></a>
                            <a href="@item.Youtube" class="twitter" target="_blank"><i class="bi bi-youtube" style="font-size:30px;color:red;"></i></a>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

   
</footer>